#include <iostream>
using namespace std;

int sum_array(int arr[], int n) {
    int total = 0;
    for (int i = 0; i < n; i++) {
        total += arr[i];
    }
    return total;
}

int main() {
    int my_array[] = {1, 2, 3, 4, 5};
    int n = sizeof(my_array)/sizeof(my_array[0]);
    cout << sum_array(my_array, n) << endl; // Output: 15
    return 0;
}
